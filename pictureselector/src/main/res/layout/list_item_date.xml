<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:paddingBottom="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
    >

    <ImageView
        android:id="@+id/iv_time_clock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_6"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_time_clock"/>

    <TextView
        android:id="@+id/tv_title"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_toRightOf="@+id/iv_time_clock"
        android:textSize="@dimen/text_size_16"
        android:text="Medium Text"
        android:textColor="@color/selector_date_title"/>

    <cn.wang.img.selector.views.MyCheckTextView
        android:id="@+id/tv_check"
        android:textColor="@color/selector_state_text_color"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:button="@null"
        android:textSize="@dimen/text_size_16"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:selectText="@string/select"
        app:selectedText="@string/selected"
        />

</RelativeLayout>